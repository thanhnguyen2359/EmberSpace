@import _fonts
@import _mixins
@import _variables
@import _icons
@import _ultilities

html, body
  height 100%
  
body
  font 300 16px 'Open Sans', sans-serif
  line-height 1.5em

a
  color:inherit
  &:hover
    color: inherit
/////////////////////
// LAYOUT
/////////////////////

.wrapper
  width: 100%
  
.small-wrapper
  width: 80%
  margin: auto
  
.left-side
  min-width: 130px
  width: 10%
  height: 100%
  min-height: 700px
  background: $color-black
  color: $color-grey-light
  font-size: 0.875em
  position: fixed
  left: 0px
  
.right-side
  width: 90%
  margin-left: 10%
  background: $color-white

.sidebar
  padding: 20px
  .nav-title
    font-size: 0.625em
    font-weight: 600
    text-transform: uppercase
  .nav-links
    list-style-type: none
    padding-left: 0px
    font-size: 1em
    span
      display: inline-block
      margin-right: 5px
  a
    color: $color-grey-light
    &:hover
      text-decoration: none
      color: $color-white
  .btn-search
    font-size: 0.875em
  .icon-search
    display: inline-block
    margin-right: 4px

.btn-signup
  padding: 5px
  border-radius: 3px
  margin-top: 30px
  margin-bottom: 5px
  width: 100%
  border: 1px solid $color-white
  background: transparent
  font-weight: bold
  color: $color-white
  &:hover
    background: $color-white
    color: $color-black

.btn-signin
  padding: 5px
  border-radius: 3px
  width: 100%
  background: transparent
  border: none
  &:hover
    background: $color-white
    color: $color-black
    
.footer-global
  font-size: 0.6875em
  margin-top: 50px
  .link
    a
      &::after
        content: "."
        margin:0 2px 0 2px
        

.tool-bar
  background: $color-black-light
  z-index: 1001
  position: fixed
  bottom: 0px
  width: 100%
  color: $color-white
  height: 60px

.tool-set
  border-radius: 5px
  display: table
  position: absolute
  top: 50%
  left: 5%
  height: 30px
  margin-top: -15px
  width: 90%
  background: $color-black
  .icon-play, .icon-previous, .icon-next
    display: inline-block
  .play-controls
    float: left
    width: 100px
    a 
      margin-top: 2.5px
      margin-left: 2.5px
  .now-playing
    margin-top: 2.5px
    float: left
    font-size: 0.75em
  .mode-controls
    a
      display: inline-block
      margin-top: 2.5px
      margin-left: 2.5px
    margin-top: 2.5px
    margin-right: 5px
    float: right
      
.logo
  background:url("data:image/svg+xml;base64,")
  width: 100%
  height: 40px
  
.lightbox-cover
  width: 100%
  height: 100%
  position: absolute
  bottom : 60px
  background: $color-grey
  z-index: 1002
  opacity: 0.99
  

  
/////////////////////
//  PAGEs
/////////////////////

.header
  background:url('/images/music-header-bg.jpg') no-repeat
  background-size: 100% 200px
  width: 100%
  height: 200px
  display: table

.header-inner
  display: table-cell
  width: 100%
  vertical-align: middle
  text-align: center
  color: $color-white

.search-input
  box-shadow: inset 0 1px 1px $color-black-dark
  width: 300px
  border-radius: 50px
  border: 0px
  padding: 10px 50px 10px 50px
  background-color: rgba(0, 0, 0, 0.2)
  
.btn-upload
  float: right
  display: block
  border: 1px solid $color-white
  color: $color-white
  padding: 10px
  margin-top: -50px
  margin-right: 20px
  
.content
  .module
    padding-top: 40px
    padding-left: 40px
  .filter-tags
    border-bottom: 1px solid $color-grey
    display: block
    margin-bottom: 20px
    li 
      height: 40px
    a
      display:inline-block
      height: 100%
    a:hover
      text-decoration: none
    .active
      border-bottom: 1px solid $color-blue-sky
  .genres-drpdown
    height: 40px
    width: 200px
    display: inline-block
    border: 1px solid $color-grey
    color : $color-grey-dark
    background : $color-white
