@import _fonts
@import _mixins
@import _variables
@import _icons

html, body
  height 100%
  
body
  font 300 16px 'Open Sans', sans-serif
  line-height 1.5em


/////////////////////
// LAYOUT
/////////////////////

.wrapper
  width: 100%
  
.left-side
  width: 10%
  min-height: 1000px
  float: left 
  background: $color-black
  color: $color-grey-light
  font-size: 0.875em
  
.right-side
  width: 90%
  float: left
  background: $color-white

.sidebar
  padding: 20px
  .nav-title
    font-size: 0.625em
    font-weight: 600
    text-transform: uppercase
  .nav-links
    list-style-type: none
    padding-left: 0px
    font-size: 1em
  a
    color: $color-grey-light
    &:hover
      text-decoration: none
      color: $color-white
  .btn-search
    font-size: 0.875em

.btn-signup
  padding: 5px
  border-radius: 3px
  margin-top: 30px
  margin-bottom: 5px
  width: 100%
  border: 1px solid $color-white
  background: transparent
  font-weight: bold
  color: $color-white
  &:hover
    background: $color-white
    color: $color-black

.btn-signin
  padding: 5px
  border-radius: 3px
  width: 100%
  background: transparent
  border: none
  &:hover
    background: $color-white
    color: $color-black
    
.footer-global
  font-size: 0.6875em
  margin-top: 50px
  .link
    a
      &::after
        content: "."
        margin:0 2px 0 2px
        

.tool-bar
  background: $color-black-light
  z-index: 1001
  position: fixed
  bottom: 0px
  width: 100%
  color: $color-white
  height: 60px

.tool-set
  border-radius: 5px
  display: table
  position: absolute
  top: 50%
  left: 5%
  height: 30px
  margin-top: -15px
  width: 90%
  background: $color-black
  .icon-play, .icon-previous, .icon-next
    display: inline-block
  .play-controls
    float: left
    width: 100px
    a 
      margin-top: 2.5px
      margin-left: 2.5px
  .now-playing
    margin-top: 2.5px
    float: left
    font-size: 0.75em
  .mode-controls
    a
      display: inline-block
      margin-top: 2.5px
      margin-left: 2.5px
    margin-top: 2.5px
    margin-right: 5px
    float: right
      
